{
    "AWSEBDockerrunVersion": 2,
    "containerDefinition" : [
        {
            "name": "frontend",
            "image": "songyoungmin/docker-frontend",
            "hostname":"frontend",
            "essential": false,
            "memory": 128
        },
        {
            "name": "backend",
            "image": "songyoungmin/docker-backend",
            "hostname": "backend",
            "essential" : false,
            "memory":128
        },
        {
            "name": "nginx",
            "image": "songyoungmin/docker-nginx",
            "hostname":"nginx",
            "essential":true,
            "portMapping":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["frontend","backend"],
            "memory":128

        }
    ]
}